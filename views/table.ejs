<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
  </head>
  <body>
    <section class="px-10 py-5 bg-slate-50 h-full">
      <!-- header start -->

      <%- include('header')%>
      <!-- header end -->

      <!-- data table start -->
      <div class="p-6 flex justify-between items-center">
        <h2
          class="text-3xl font-bold text-gray-800 bg-gradient-to-br from-indigo-500 to-purple-600 bg-clip-text text-transparent"
          >Employee List</h2
        >

        <input
          type="search"
          placeholder="Search"
          class="w-100 bg-white border-gray-300 border rounded-full px-4 py-1 pl-8 focus:ring-2 focus:ring-blue-500 focus:outline-none"
        />
      </div>
      <table
        class="min-w-full divide-y divide-gray-200 text-sm rounded-2xl overflow-hidden shadow-lg"
      >
        <thead class="bg-gradient-to-br from-indigo-500 to-purple-600">
          <tr>
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >#</th
            >
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >Name</th
            >
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >Email</th
            >
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >Role</th
            >
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >Salary</th
            >
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >Time Shift</th
            >
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >Description</th
            >
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >Skills</th
            >
            <th
              class="px-6 py-4 text-left font-semibold text-white tracking-wide"
              >Additional Notes</th
            >
            <th
              class="px-6 py-4 text-center font-semibold text-white tracking-wide"
              >Actions</th
            >
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 bg-white">
          <% employees.forEach((val, index) =>{ const {employeeName, email,
          department, employeeSalary, shiftStart, shiftEnd, description, skills,
          notes} = val %>

          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 text-gray-800"><%= index + 1 %></td>
            <td class="px-6 py-4 text-gray-800 font-medium"
              ><%= employeeName %></td
            >
            <td class="px-6 py-4 text-gray-800"><%= email %></td>
            <td class="px-6 py-4 text-gray-800 capitalize"
              ><%= department %></td
            >
            <td class="px-6 py-4 text-gray-800">â‚¹ <%= employeeSalary %></td>
            <td class="px-6 py-4 text-gray-800"
              ><%= shiftStart %> - <%= shiftEnd %></td
            >
            <td class="px-6 py-4 text-gray-800"><%= description %></td>
            <td class="px-6 py-4 text-gray-800"><%= skills %></td>
            <td class="px-6 py-4 text-gray-800"><%= notes %></td>
            <td class="px-6 py-4 flex gap-x-1">
              <a
                href="/employees/delete/<%= val.id %>"
                class="text-red-600 hover:text-red-400"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="size-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"
                  />
                </svg>
              </a>
              <a
                href="/employee/edit?id=<%= val.id %>"
                class="text-indigo-600 hover:text-indigo-400"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="size-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
                  />
                </svg>
              </a>
            </td>
          </tr>
          <% })%>
        </tbody>
      </table>
      <!-- data table end -->
    </section>

    <!-------------- scripts ------------------>
    <script>

      const inputSearch = document.querySelector('input[type="search"]');
      const rows = document.querySelectorAll('tbody tr');

      inputSearch.addEventListener('input', ()=>{
        const val = inputSearch.value.toLowerCase()

        rows.forEach(row => {
          const text = row.innerText.toLowerCase()
          row.style.display = text.includes(val) ? "" : "none";
        });
      })

    </script>
  </body>
</html>
